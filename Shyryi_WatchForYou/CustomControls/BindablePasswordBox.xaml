<UserControl x:Class="Shyryi_WatchForYou.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shyryi_WatchForYou.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">

    <PasswordBox x:Name="txtPassword"
                             FontSize="10"
                             FontWeight="Medium"
                             FontFamily="Cambria Math"
                             Foreground="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ForegroundColor}"
                             CaretBrush="LightBlue"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,2"
                             VerticalContentAlignment="Center"
                             Padding="30,0,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/Shyryi_WatchForYou;component/Resources/Images/SignInView/PasswordIcon.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
