<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="SimpleTextTxtBlk" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontFamily" Value="Cambria Math" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    <Style x:Key="TitleTextTxtBlk" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontFamily" Value="Cambria Math" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    <Style x:Key="FooterTextTxtBlk" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource EnterViewFooterTextTxtBlk}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontFamily" Value="Cambria Math" />
    </Style>
    <Style x:Key="ErrorMessage" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ErrorMessageColor}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontFamily" Value="Cambria Math" />
    </Style>
</ResourceDictionary>