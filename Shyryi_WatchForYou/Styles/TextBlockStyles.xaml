<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="SimpleText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SignInViewText}"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontFamily" Value="Cambria Math" />
    </Style>
    <Style x:Key="TextBoxTitles" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SignInViewText}"/>
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontFamily" Value="Cambria Math" />
    </Style>
    <Style x:Key="FooterText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource EnterViewFooterText}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontFamily" Value="Cambria Math" />
    </Style>
    <Style x:Key="ErrorMessage" TargetType="TextBlock">
        <Setter Property="Foreground" Value="OrangeRed" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontFamily" Value="Cambria Math" />
    </Style>
</ResourceDictionary>